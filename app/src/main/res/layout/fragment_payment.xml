<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PaymentFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/frPaymentIvCash"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_cash"/>
                <ImageView
                    android:id="@+id/frPaymentIvContact"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_contact"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/frPaymentIvDelete"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_fill_close"
                    android:layout_toLeftOf="@id/frPaymentIvContact"/>
                <EditText
                    android:layout_toRightOf="@id/frPaymentIvCash"
                    android:layout_toLeftOf="@id/frPaymentIvDelete"
                    android:paddingRight="5dp"
                    android:id="@+id/frPaymenttvCallNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPricing"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>